<!-- FOOTER -->
<footer id="footer">
	<div class="container">

		<div class="row">
			
			<div class="col-md-3">
				<img class="footer-logo" src="<%- url_for('img/logo-bw.png') %>" alt="" />
				<p><%= __('layout.footer.smalldesc') %></p>
				<address>
					<ul class="list-unstyled">
						<li class="footer-sprite address"><%= __('layout.footer.address') %></li>
						<li class="footer-sprite phone"><%= __('layout.footer.phone') %></li>
						<li class="footer-sprite email"><%- mail_to(__('layout.footer.mailto')) %></li>
					</ul>
				</address>
			</div>

			<div class="col-md-3">
				<h4 class="letter-spacing-1"><%= __('layout.footer.blog') %></h4>
				<ul class="footer-posts list-unstyled">
					<li>
						<a href="#">Ouvrir plusieurs projets en même temps dans Planisware</a>
						- <small>29 June 2015</small>
					</li>
					<li>
						<a href="#">Créer des annotations dans Planisware</a>
						- <small>29 June 2015</small>
					</li>
					<li>
						<a href="#">Export des objets - Fichier LSP Planisware</a>
						- <small>29 June 2015</small>
					</li>
				</ul>
			</div>

			<div class="col-md-2">
				<h4 class="letter-spacing-1"><%= __('layout.footer.sections') %></h4>
				<ul class="footer-links list-unstyled">
		        <% for (var i in theme.menu){ if(__('menu.' + i) != ('menu.' + i)) { %>
		          <li><a href="<%- url_for(theme.menu[i]) %>"><%= __('menu.' + i) %></a></li>
		        <% } } %>
				</ul>
			</div>

			<div class="col-md-4">
				<h4 class="letter-spacing-1"><%= __('layout.footer.newsletter.title') %></h4>
				<p><%= __('layout.footer.newsletter.subtitle') %></p>

				<form class="validate" id="mailjet-widget-form-7341" action="https://fr.mailjet.com/account/tools/widget/subscribe/1Up" method="post" data-toastr-position="bottom-right">
					<div class="input-group">
						<span class="input-group-addon"><i class="fa fa-envelope"></i></span>
						<input type="email" id="mailjet-widget-email-field-7341" name="email" class="form-control required" placeholder="<%= __('layout.footer.newsletter.mailfield') %>">
						<span class="input-group-btn">
							<button class="btn btn-success" type="submit"><%= __('layout.footer.newsletter.submit') %></button>
						</span>
					</div>
				</form>
				<div class="top-buffer">
					<a href="<%- theme.link.googleplus %>" class="social-icon social-icon-border pull-left" data-toggle="tooltip" data-placement="top" title="Google+">

						<i class="fa fa-google-plus"></i>
						<i class="fa fa-google-plus"></i>
					</a>
					<a href="<%- theme.link.twitter %>" class="social-icon social-icon-border pull-left" data-toggle="tooltip" data-placement="top" title="Twitter">
						<i class="fa fa-twitter"></i>
						<i class="fa fa-twitter"></i>
					</a>
					<a href="<%- theme.link.linkedin %>" class="social-icon social-icon-border pull-left" data-toggle="tooltip" data-placement="top" title="Linkedin">
						<i class="fa fa-linkedin"></i>
						<i class="fa fa-linkedin"></i>
					</a>
					<a href="<%- theme.link.github %>" class="social-icon social-icon-border pull-left" data-toggle="tooltip" data-placement="top" title="Github">
						<i class="fa fa-github"></i>
						<i class="fa fa-github"></i>
					</a>
		
				</div>
			</div>
		</div>
	</div>

	<div class="copyright">
		<div class="container">
			<ul class="pull-right nomargin list-inline mobile-block">
				<li><a href="<%- url_for('fr/mentions.html') %>"><%= __('layout.footer.mentions') %></a></li>
				<li>&bull;</li>
				<li><a href="#">Plan du site</a></li>
			</ul>
			&copy;2012 - <%= new Date().getFullYear() %> <%= config.title %>. <%= __('layout.footer.copyright') %>.
		</div>
	</div>
</footer>
